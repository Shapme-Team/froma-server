generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String   @id @default(cuid())
  name        String?
  email       String   @unique
  phoneNumber Int
  Addres      Addres[]
  Cart        Cart?
}

model Cart {
  id       String    @id @default(cuid())
  user     User?     @relation(fields: [userId], references: [id])
  products Product[]
  userId   String?
}

model Order {
  id            String    @id @default(cuid())
  products      Product[]
  paymentMethod String
  order_address Addres?   @relation(fields: [addresId], references: [id])
  addresId      String?
}

model Seller {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String?
  phoneNumber Int
  products    Product[]
}

model Product {
  id              String         @id @default(cuid())
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  title           String?
  description     String
  imageUrl        String
  unit            String?        @default("")
  quantity        Int            @default(1)
  weight          String?
  categorie       Categorie?     @relation(fields: [categorieId], references: [id])
  categorieId     String?
  subcategory     SubCategories? @relation(fields: [subCategoriesId], references: [id])
  subCategoriesId String?
  availability    Boolean?       @default(true)
  stock_quantity  Int
  viewCount       Int            @default(0)
  seller          Seller?        @relation(fields: [sellerId], references: [id])
  sellerId        String?        @map("sellerId")
  Cart            Cart?          @relation(fields: [cartId], references: [id])
  cartId          String?
  Order           Order?         @relation(fields: [orderId], references: [id])
  orderId         String?
}

model Categorie {
  id            String          @id @default(cuid())
  name          String
  subcategories SubCategories[]
  Product       Product[]
}

model SubCategories {
  id         String    @id @default(cuid())
  name       String
  categorie  Categorie @relation(fields: [categoryid], references: [id])
  categoryid String
  Product    Product[]
}

model Addres {
  id          String  @id @default(cuid())
  city        String
  phoneNumber Int
  state       String
  pincode     Int
  nearBy      String
  mainAddress String
  user        User?   @relation(fields: [userId], references: [id])
  userId      String?
  Order       Order?
}
