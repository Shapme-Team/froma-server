generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

/// user model
model User {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  phoneNumber Int?
  address     Address[]
  cart        Cart?     @relation(fields: [cartId], references: [id])
  cartId      String

}

model Address {
  id          String  @id @default(cuid())
  city        String
  phoneNumber Int
  state       String
  pincode     Int
  nearBy      String
  mainAddress String
  // user ---- relation
  user        User?   @relation(fields: [userId], references: [id])
  userId      String?
  orders      Order[]
}

model Cart {
  id       String    @id @default(cuid())
  products Product[]
  user     User?

}

model Order {
  id            String    @id @default(cuid())
  products      Product[]
  paymentMethod String
  orderAddress  Address?  @relation(fields: [addresId], references: [id])
  addresId      String?
}

model Seller {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String?
  phoneNumber Int
  products    Product[]
}

model Product {
  id              String         @id @default(cuid())
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  title           String?
  description     String
  imageUrl        String
  unit            String?        @default("gm")
  quantity        Int            @default(1)
  weight          String?
  // category ---- relation
  categorie       Categorie?     @relation(fields: [categorieId], references: [id])
  categorieId     String?
  // subCategory ---- relation
  subcategory     SubCategories? @relation(fields: [subCategoriesId], references: [id])
  subCategoriesId String?
  availability    Boolean?       @default(true)
  stockQuantity   Int
  viewCount       Int            @default(0)
  // seller ---- relation
  seller          Seller?        @relation(fields: [sellerId], references: [id])
  sellerId        String?

  // ---------- product extra references ------
  // cart ---- relation
  carts  Cart[]
  // order ---- relation
  orders Order[]
}

model Categorie {
  id            String          @id @default(cuid())
  name          String
  subcategories SubCategories[]
  product       Product[]
}

model SubCategories {
  id         String    @id @default(cuid())
  name       String
  categorie  Categorie @relation(fields: [categoryid], references: [id])
  categoryid String
  product    Product[]
}
